<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.navan.app.alunouesb.view.activity.LembreteActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titulo"/>
    <EditText
        android:id="@+id/text_titulo_lembrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite um titulo"
        android:enabled="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Lembrete"/>
    <EditText
        android:id="@+id/text_mensagem_lembrete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Digite seu lembrete aqui"
        android:enabled="false"
        android:background="@android:color/transparent"
        android:gravity="top"/>


</LinearLayout>
