<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cassio.alunouesb">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.CadastroActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.PrincipalActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.HorariosActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.PrincipalActivity" />
        </activity>
        <activity
            android:name=".activity.LembretesActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.DisciplinasActivity"
            android:launchMode="singleTop" />
        <activity android:name=".activity.CalcularMediaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.PrincipalActivity" />
        </activity>
        <activity android:name=".activity.LembreteActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LembretesActivity" />
        </activity>
        <activity android:name=".activity.UsuarioActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.PrincipalActivity" />
        </activity>
        <activity
            android:name=".activity.DisciplinaActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.DisciplinasActivity" />
        </activity>
        <activity
            android:name=".activity.AdicionarDisciplinaActivity"
            android:windowSoftInputMode="stateVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.DisciplinasActivity" />
        </activity>
        <activity
            android:name=".activity.AdicionarLembreteActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".activity.AdicionarHorarioActivity" />
    </application>

</manifest>