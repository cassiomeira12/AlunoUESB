<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cassio.alunouesb">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".activity.CadastroActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".activity.PrincipalActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.HorariosActivity" />
        <activity android:name=".activity.LembretesActivity" />
        <activity android:name=".activity.DisciplinasActivity" />
        <activity android:name=".activity.CalcularMediaActivity" />

        <activity android:name=".activity.LembreteActivity" />
        <activity android:name=".activity.UsuarioActivity"/>
        <activity android:name=".activity.DisciplinaActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />


        <activity android:name=".activity.AdicionarDisciplinaActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".activity.AdicionarLembreteActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".activity.AdicionarHorarioActivity" />
        <activity android:name=".activity.AdicionarUsuarioActivity"
            android:windowSoftInputMode="stateVisible" />

    </application>

</manifest>